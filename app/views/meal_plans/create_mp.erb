<h1>Create a Meal Plan</h1>

<form action="/meal-plans" method="post">
  <h3>Meal Plan Name</h3>
  <input type="text" class="text-field-input" id="plan_name" name="name" value="Your Meal Plan" required/>

  <h3>Breakfast</h3>
  <section id="breakfast">
    <h4>Choose a recipe</h4>
      <% @user.recipes.each do |recipe| %>
        <label for="<%= recipe.id %>"><%=recipe.name%></label>
        <input type="radio" name="breakfast" id="<%= recipe.id %>" value="<%= recipe.id %>" >
      <% end %>
      <br><br>
    <label class="create-new" for="create-new-breakfast"><strong>Or create a new one</strong></label>
    <input type="radio" class="create-new" id="create-new-breakfast" name="breakfast" value="<%= nil %>">

    <!-- Begin new breakfast recipe form fields -->
    <br>
    <label for="br_new_name">Name</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="br_new_name" name="breakfast_new[name]" />

    <label for="br_new_ingredients">Ingredients</label>
    <abbr title="required">*</abbr>
    <label for="br_new_ingredients" id="ingredient-instruction">Please enter your ingredients separated by commas, e.g. "cereal, milk"</label>
    <input type="text" class="text-field-input" id="br_new_ingredients" name="breakfast_new[ingredients]" />

    <label for="br_new_instruction">Cooking Instructions</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="br_new_instruction" name="breakfast_new[instruction]" />
  </section>

  <h3>Lunch</h3>
  <section id="lunch">
    <h4>Choose a recipe</h4>
      <% @user.recipes.each do |recipe| %>
        <label for="<%= recipe.id %>"><%=recipe.name%></label>
        <input type="radio" name="lunch" id="<%= recipe.id %>" value="<%= recipe.id %>" >
      <% end %>
    <br><br>
    <label class="create-new" for="create-new-lunch"><strong>Or create a new one</strong></label>
    <input type="radio" class="create-new" id="create-new-lunch" name="lunch" value="<%= nil %>" >

    <!-- Begin new lunch recipe form fields -->
    <br>
    <label for="ln_new_name">Name</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="ln_new_name" name="lunch_new[name]" />

    <label for="ln_new_ingredients">Ingredients</label>
    <abbr title="required">*</abbr>
    <label for="ln_new_ingredients" id="ingredient-instruction">Please enter your ingredients separated by commas, e.g. "cereal, milk"</label>
    <input type="text" class="text-field-input" id="ln_new_ingredients" name="lunch_new[ingredients]" />

    <label for="ln_new_instruction">Cooking Instructions</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="ln_new_instruction" name="lunch_new[instruction]" />
  </section>

  <h3>Dinner</h3>
  <section id="dinner">
    <h4>Choose a recipe</h4>
      <% @user.recipes.each do |recipe| %>
        <label for="<%= recipe.id %>"><%=recipe.name%></label>
        <input type="radio" name="dinner" id="<%= recipe.id %>" value="<%= recipe.id %>" >
      <% end %>
    <br><br>
    <label class="create-new" for="create-new-dinner"><strong>Or create a new one</strong></label>
    <input type="radio" class="create-new" id="create-new-dinner" name="dinner" value="<%= nil %>" >

    <!-- Begin new dinner recipe form fields -->
    <br>
    <label for="dn_new_name">Name</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="dn_new_name" name="dinner_new[name]" />

    <label for="dn_new_ingredients">Ingredients</label>
    <abbr title="required">*</abbr>
    <label for="dn_new_ingredients" id="ingredient-instruction">Please enter your ingredients separated by commas, e.g. "cereal, milk"</label>
    <input type="text" class="text-field-input" id="dn_new_ingredients" name="dinner_new[ingredients]" />

    <label for="dn_new_instruction">Cooking Instructions</label>
    <abbr title="required">*</abbr>
    <input type="text" class="text-field-input" id="dn_new_instruction" name="dinner_new[instruction]" />
  </section>

  <button type="submit">Create</button>
</form>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
