<h1>Edit <%=@recipe.name%></h1>

<h3>Edit below, then press Save to save your changes</h3>

<form action="/recipes/<%=@recipe.id%>" method="post">
  <input type="hidden" class="hidden" name="_method" value="patch" />

  <label for="name">Name</label>
  <abbr title="required">*</abbr>
  <input type="text" id="name" name="name" value="<%=@recipe.name%>"required />

  <label for="ingredients">Ingredients</label>
  <abbr title="required">*</abbr>
  <label for="ingredients" id="ingredient-instruction">Please enter your ingredients separated by commas, e.g. "cereal, milk"</label>
  <input type="text" id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>"required />

  <label for="instruction">Cooking Instructions</label>
  <abbr title="required">*</abbr>
  <input type="text" id="instruction" name="instruction" value="<%=@recipe.instruction%>"required />

  <button type="submit">Save</button>
</form>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
