<h1>Create a Recipe</h1>

<form action="/recipes" method="post">
  <p>
    <input type="text" id="name" name="name" placeholder="Name" required />
  </p>
  <p>
    Please enter your ingredients separated by commas, e.g. "cereal, milk"
    <br>
    <input type="text" id="ingredients" name="ingredients" placeholder="Ingredients" required />
  </p>
  <p>
    <input type="text" id="instruction" name="instruction" placeholder="Instructions" required />
  </p>
  <input type="hidden" id="user_id" name="user_id" value="<%= @user.id %>" >
  <br><br>
  <button type="submit">Create</button>
</form>
